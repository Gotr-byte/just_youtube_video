{
  "manifest_version": 3,
  "name": "YouTube Embed Redirect",
  "version": "1.0",
  "description": "Redirects standard YouTube watch pages to embed view.",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://www.youtube.com/watch*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "YouTube Embed Redirect"
  }